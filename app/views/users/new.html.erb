<div class="container my-5">
  <div class ="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-dark text-light">
        <div class="card-header text-center"
          <h2 class="mb-0">Register Your Account</h2>
        </div>
        <div class="card-body">
        <!-- error messages -->
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">There were some errors:</h4>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <%= form_with model: @user, url:users_path, local: true do |f| %>
            
            <!-- Username -->
            <div class="mb-3">
              <%= f.label :username, "Username", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>

            <!-- Username -->
            <div class="mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <!-- Username -->
            <div class="mb-3">
              <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tect-center mt-3">
        <p>Already have an account? <%= link_to "Login", login_path, class: "text-primary" %></p>
      </div>
    </div>
  </div>
</div>


