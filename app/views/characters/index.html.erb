<div class="container my-5">
  <h1 class="text-light">Your Characters</h1>
  <% if @characters.present? && @characters.any? %>
    <div class="list-group">
      <% @characters.each do |character| %>
        <div class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
          <!-- Character Name -->
          <div>
            <strong><%= character.name %></strong>
          </div>

          <!-- dropdown to show details -->
          <div class="dropdown">
            <button
              class="btn btn-secondary btn-sm dropdown-toggle"
              type="button"
              id="dropdownMenuButton<%= character.id %>"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              Details
            </button>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton<%= character.id %>">
              <li><strong>Level:</strong> <%= character.level %></li>
              <li class="dropdown-divider"></li>
              <li><strong>Description:</strong></li>
              <li><%= character.description %></li>
            </ul>
          </div>

          <!-- Edit and Delete Buttons -->
          <div>
            <%= link_to edit_character_path(character), class: "btn btn-primary btn-sm me-2", aria: { label: "Edit #{character.name}" } do %>
              <i class="bi bi-pencil"></i> Edit
            <% end %>
            <%= button_to character_path(character), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete #{character.name}?" }, aria: { label: "Delete #{character.name}" } do %>
              <i class="bi bi-trash"></i> Delete
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-light">No characters found. <%= link_to "Create a new character", new_character_path, class: "text-primary" %></p>
  <% end %>

  <!-- New Character Button -->
  <div class="d-grid mt-4"
    <%= link_to "New Character", new_character_path, class: "btn btn-success btn-lg" %>
  </div>
</div>